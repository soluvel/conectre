<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1" author="kassia.zama">
        <preConditions onFail="MARK_RAN" onFailMessage="A tabela biometria jÃ¡ existe no database">
            <not>
                <tableExists tableName="biometria"/>
            </not>
        </preConditions>

        <createTable tableName="biometria">
            <column name="id" autoIncrement="true" type="int">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_biometria"/>
            </column>

            <column name="dt_medicao" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="hora" type="TIME"/>

            <column name="peixe_amostra" type="int"/>
            <column name="mortalidade" type="int"/>
            <column name="mortalidade_acumulada" type="int"/>
            <column name="qnt_peixe" type="int"/>

            <column name="pesoMedio" type="double"/>
            <column name="biomassaTotal" type="double"/>
            <column name="ganhoPeso" type="double"/>
            <column name="racaoTotal" type="double"/>
            <column name="ca" type="double"/>
            <column name="gpd" type="double"/>

            <column name="medicao_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_biometria_medicao" referencedTableName="medicao_novo"
                             referencedColumnNames="id"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>