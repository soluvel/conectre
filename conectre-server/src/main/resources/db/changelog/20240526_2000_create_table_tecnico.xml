<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1" author="kassia.zama">
        <preConditions onFail="MARK_RAN" onFailMessage="A tabela tecnico jÃ¡ existe no database">
            <not>
                <tableExists tableName="tecnico"/>
            </not>
        </preConditions>

        <createTable tableName="tecnico">
            <column name="id"  autoIncrement="true" type="int">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_tecnico"
                             foreignKeyName="fk_usuarioempresa_usuario" referencedTableName="usuario" referencedColumnNames="id"/>
            </column>
            <column name="cpf" type="varchar(11)">
                <constraints nullable="false"/>
            </column>
            <column name="celular" type="varchar(9)"/>
            <column name="cep" type="varchar(8)"/>
            <column name="logradouro" type="varchar(255)"/>
            <column name="numero" type="varchar(10)"/>
            <column name="complemento" type="varchar(255)"/>
            <column name="bairro" type="varchar(255)"/>
            <column name="cidade" type="varchar(255)"/>
            <column name="estado" type="varchar(2)"/>
        </createTable>

    </changeSet>
</databaseChangeLog>