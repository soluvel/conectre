<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1" author="kassia.zama">
        <preConditions onFail="MARK_RAN" onFailMessage="A tabela trato jÃ¡ existe no database">
            <not>
                <tableExists tableName="trato"/>
            </not>
        </preConditions>

        <createTable tableName="trato">
            <column name="id" autoIncrement="true" type="int">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_trato"/>
            </column>

            <column name="dt_medicao" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="hora" type="TIME"/>

            <column name="temperatura" type="double"/>
            <column name="oxigenio" type="double"/>
            <column name="racao_ofertada" type="double"/>
            <column name="racao_despejada" type="double"/>
            <column name="racao_restante_silo" type="double"/>

            <column name="medicao_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_trato_medicao" referencedTableName="medicao_novo"
                             referencedColumnNames="id"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>